@require "variables";
@require "mixins";

html {
  line-height: 1.5;
}

body {
  font-family: $font-family;
  margin: 0;
  padding: 0;
  font-smoothing: antialiased;
}

a {
  color: inherit;

  +hover() {
    color: inherit;
  }
}

ul, ol {
  list-style: none;
  padding: 0;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-size: 1em;
  font-weight: normal;
}

hr {
  border: none;
  border-bottom: 1px solid $cl-lightgray;
  margin: 1rem 0;
}

$form-reset {
  font-size: 1rem;
  border: 1px solid transparent;
  border-radius: 0;
  margin: 0;
  padding: 0.4rem 0.5rem;
  font-size: 1em;
  appearance: none;
  background: none;
  color: inherit;

  &:active,
  &:focus {
    border-color: $cl-focus;
    outline: none;
  }
}

button {
  @extend $form-reset;

  text-align: center;
  cursor: pointer;
}

input[type="text"],
input[type="number"],
input[type="email"],
input[type="password"],
textarea,
select {
  @extend $form-reset;

  text-align: left;
}

img {
  width: 100%;
  vertical-align: bottom;
}