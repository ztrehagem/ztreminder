@require "variables";
@require "functions";
  
hover() {
  {as-hover()} {
    {block}
  }
}

media(query) {
  @media query {
    /{selector()} {
      {block}
    }
  }
}

tablet() {
  +media("screen and (max-width: 1023px)") {
    {block}
  }
}

mobile() {
  +media("screen and (max-width: 767px)") {
    {block}
  }
}

padded-container() {
  box-sizing: border-box;
  max-width: calc(1200px + 4rem);
  margin-left: auto;
  margin-right: auto;
  padding-left: 2rem;
  padding-right: @padding-left;

  +mobile() {
    padding-left: 1.5rem;
    padding-right: @padding-left;
  }
}

text-button($cl1 = lighten($cl-theme, 15%), $cl2 = lighten($cl-theme, 30%)) {
  background-color: $cl1;
  transition: .2s ease;
  transition-property: background-color;
  display flex
  align-items center
  text-decoration none
  padding 0.3rem 0.7rem

  &:not(:disabled) {
    +hover() {
      background-color: $cl2;
      color: inherit;
    }
  }

  &:disabled {
    opacity: 0.7;
    cursor: default;
  }
}

text-button-active($bg = $cl-light, $font = $cl-themedark) {
  background-color $bg
  color $font

  +hover() {
    background-color $bg
    color $font
  }
}